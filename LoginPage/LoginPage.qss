QComboBox
{
    height: 60px;
    width: 345px;
    color: #000; /* text color */
    font-family: "Arial";
    font-size: 22px;
    border: 2px solid #529BFF;
    border-radius:5px;

}
QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 40px;

    border-left-width: 0px;
    border-left-color: darkgray;
    border-left-style: solid; /* just a single line */
    border-top-right-radius: 3px; /* same radius as the QComboBox */
    border-bottom-right-radius: 3px;
}

QComboBox::down-arrow {
    image: url(:/image/ico/login/commod.png);
}
QComboBox QAbstractItemView
{
        border: 2px solid darkgray;/*下拉列表的边线的粗细、实虚*/
        selection-background-color: blue;/*下拉列表选中的行的背景色*/
        color: #000; /* text color */
        font-family: "Arial";
        font-size: 22px;
}
QComboBox QAbstractItemView::item
{
        min-height: 60px;/*下拉列表的行高，也可以看做行距*/
        color: #000; /* text color */
        font-family: "Arial";
        font-size: 22px;
}
/*垂直滚动条整体*/
QScrollBar:vertical
{
    width:25px;
    background:rgb(30, 141, 255,0%);
    margin:0px,0px,0px,0px;
    padding-top:25px;   /*上预留位置*/
    padding-bottom:25px;    /*下预留位置*/
}

/*滚动条中滑块的样式*/
QScrollBar::handle:vertical
{
    width:25px;
    background:rgb(30, 141, 255,25%);
    border-radius:4px;
    min-height:20px;
}

/*鼠标触及滑块样式*/
QScrollBar::handle:vertical:hover
{
    width:30px;
    background:rgb(30, 141, 255,50%);
    border-radius:4px;
    min-width:20;
}
/*垂直滚动条整体*/
QScrollBar:horizontal
{
    height:25px;
    background:rgb(30, 141, 255,0%);
    margin:0px,0px,0px,0px;
    padding-left:25px;   /*上预留位置*/
    padding-right:25px;    /*下预留位置*/
}

/*滚动条中滑块的样式*/
QScrollBar::handle:horizontal
{
    height:25px;
    background:rgb(30, 141, 255,25%);
    border-radius:4px;
    min-width:20px;
}

/*鼠标触及滑块样式*/
QScrollBar::handle:horizontal:hover
{
    height:30px;
    background:rgb(30, 141, 255,50%);
    border-radius:4px;
    min-height:20;
}
